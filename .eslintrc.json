{
  "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "mongo": true
  },
  "globals": {
    "$": true,
    "supertest": true,
    "expect": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "sourceType": "module"
  },
  "rules": {
      "strict": ["error", "safe"],
      "eqeqeq":"error",
      "no-console": "off",
      "no-unused-vars": "warn",
      "no-eval": "error",
      "indent": ["error", 2],      
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
  }
}